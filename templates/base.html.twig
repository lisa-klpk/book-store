<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% block menu %}
                {% if app.user %}
                    <p>{{ app.user.email }}</p>
                {% endif %}
                <nav>
                    <div>
                        <a href="{{ path('app_frontend_home') }}">Accueil</a>
                    </div>
                    <div>
                        <a href="{{ path('app_frontend_search') }}">Rechercher</a>
                    </div>
                    <div>
                        <a href="{{ path('app_frontend_newBook') }}">Ajouter un livre</a>
                    </div>
                </nav> 
            {% endblock %} 
            {% block content %}{% endblock %} 
        {% endblock %}
    </body>
</html>
